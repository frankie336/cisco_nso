<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device}</name>
      <config>
        <ip xmlns="urn:ios">
          <vrf>
            <name>{/vrf_name}</name>
            <description>{/vrf_name}</description>
            <rd>{/rd}</rd>
            <route-target>
              <export>
                <asn-ip>{/export_r}</asn-ip>
              </export>
              <import>
                <asn-ip>{/import_r}</asn-ip>
              </import>
            </route-target>
          </vrf>
          <route>
            <vrf>
              <name>{/vrf_name}</name>
              <ip-route-forwarding-list>
                <prefix>{/static_route_ip}</prefix>
                <mask>255.255.255.0</mask>
                <forwarding-address>10.11.11.1</forwarding-address>
              </ip-route-forwarding-list>
            </vrf>
          </route>
        </ip>
        <interface xmlns="urn:ios">
          <GigabitEthernet>
            <name>{/wan_interface_number}</name>
            <description>{/vrf_name}</description>
            <encapsulation>
              <dot1Q>
                <vlan-id>{/vlan}</vlan-id>
              </dot1Q>
            </encapsulation>
            <ip-vrf>
              <ip>
                <vrf>
                  <forwarding>{/vrf_name}</forwarding>
                </vrf>
              </ip>
            </ip-vrf>
            <ip>
              <address>
                <primary>
                  <address>{/wan_ip_address}</address>
                  <mask>255.255.255.252</mask>
                </primary>
              </address>
            </ip>
          </GigabitEthernet>
        </interface>
        <router xmlns="urn:ios">
          <bgp>
            <as-no>65000</as-no>
            <address-family>
              <with-vrf>
                <ipv4>
                  <af>unicast</af>
                  <vrf>
                    <name>{/vrf-name}</name>
                    <neighbor>
                      <id>{/ce_ip_address}</id>
                      <password>
                        <text>{/bgp_password}</text>
                      </password>
                      <as-override/>
                      <description>{/vrf_name}</description>
                    </neighbor>
                    <neighbor>
                      <id>{/ce_ip_address}</id>
                      <remote-as>65001</remote-as>
                      <activate/>
                    </neighbor>
                  </vrf>
                </ipv4>
              </with-vrf>
            </address-family>
          </bgp>
        </router>
      </config>
    </device>
  </devices>
</config-template>

